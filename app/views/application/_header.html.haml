#navbar-top
  .navbar.navbar-inverse.navbar-fixed-top
    .navbar-inner
      .container
        .row
          .brand
            Brails
          .span5.pull-right
            %ul.color-switcher
              %li.switch.white{:data => {:color => "white"}}
              %li.switch.yellow{:data => {:color => "yellow"}}
              %li.switch.orange{:data => {:color => "orange"}}
              %li.switch.black{:data => {:color => "black"}}
            %ul.nav.pull-right
              %li
                = link_to 'Sign up', new_user_registration_path
              %li
                = link_to "Nominate", new_user_invitation_path
              - if user_signed_in?
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}                  
                    = current_user.email
                    %b.caret
                  %ul.dropdown-menu
                    %li= link_to 'Edit profile', '#' 
                    %li=  link_to 'Logout', destroy_user_session_path, :method => :delete
